@model SwiftBlog.Web.Models.ViewModels.UserViewModel
@{
	ViewData["Title"] = "Users";
}

<div class="bg-secondary bg-opacity-10 py-2 mt-3">
    <div class="container">
        <h1>Users - Admin Only</h1>
    </div>
</div>

<div class="container">
    @if (Model.Users != null || Model.Users.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Username</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No users found!</p>
    }
</div>